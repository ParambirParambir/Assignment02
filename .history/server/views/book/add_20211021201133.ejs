<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--Main content for Add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-6">
          <h1><%= title %></h1>

            <form class="form" method="post">
                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Book Title" name="name" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Author</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the Author name" name="author" required>
                </div>

                <div class="form-group">
                    <label for="yearTextField">Year</label>
                    <input type="text" class="form-control" id="yearTextField" placeholder="Enter the Year of publication" name="author" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Book Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea" placeholder="Enter the brief description of the book" name="description" required></textarea>
                </div>
                
                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="number" class="form-control" id="priceTextField" placeholder="Enter the price" name="price" required>
                </div>

                <button class="btn btn-primary " type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/book-list" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>

                    <div class="form-group">
                        <br><br><br><br><br><br><br><br><br><br>
                    </div>
            </form>
        </div>

    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>