<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--Main content for Add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6"></div>
        <h1><%= title %></h1>

        <form class="form" method="post">
            <div class="form-group">
                <label for="nameTextField">Book Title</label>
                <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Book Title" name="name" required>
            </div>

            <div class="form-group">
                <label for="authorTextField">Author</label>
                <input type="text" class="form-control" id="authorTextField" placeholder="Enter the Book Title" name="author" required>
            </div>

            <div class="form-group">
                <label for="publishedTextField">Year</label>
                <input type="text" class="form-control" id="publishedTextField" placeholder="Enter the Year of Publication " name="name" required>
            </div>

            <div class="form-group">
                <label for="descriptionTextArea">Book Description</label>
                <textarea type="text" class="form-control" id="descriptionTextArea" placeholder="Enter the brief description of the book" name="name" required></textarea>
            </div>
            
            <div class="form-group">
                <label for="priceTextField">Price</label>
                <textarea type="text" class="form-control" id="priceTextField" placeholder="Enter the brief description of the book" name="name" required></textarea>
            </div>

            

    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>  

