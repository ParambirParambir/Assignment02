<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--Main content for Edit page-->
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-6">
          <h1><%= title %></h1>

            <form class="form" method="post">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the name"  name="name" value="<%= book.name %>" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Email Address</label>
                    <input type="email" class="form-control" id="authorTextField" placeholder="Enter the email address" name="author" value="<%= book.author %>"  required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Phone Number</label>
                    <input type="tel" class="form-control" id="publishedTextField" placeholder="Enter the Phone Number " name="year" value="<%= book.published %>"  required>
                </div>
                
                <button class="btn btn-primary " type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/book-list" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>

                    <div class="form-group">
                        <br><br><br><br><br><br><br><br><br><br>
                    </div>
            </form>
        </div>

    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>